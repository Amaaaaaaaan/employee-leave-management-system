<%- include('../partials/header', { user: user, title: 'Request Leave' }) %>

<style>
  .form-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 50px 20px;
    min-height: calc(100vh - 300px);
  }

  .form-card {
    background: white;
    padding: 35px;
    width: 400px;
    border-radius: 12px;
    box-shadow: 0 8px 20px rgba(0,0,0,0.1);
  }

  .form-card h1 {
    margin-bottom: 20px;
    text-align: center;
    color: #333;
  }

  .form-card input,
  .form-card textarea,
  .form-card select {
    width: 100%;
    padding: 10px;
    margin-bottom: 15px;
    border-radius: 6px;
    border: 1px solid #ccc;
    font-size: 14px;
    outline: none;
    font-family: inherit;
  }

  .form-card input:focus,
  .form-card textarea:focus,
  .form-card select:focus {
    border-color: #4e73df;
    box-shadow: 0 0 8px rgba(78, 115, 223, 0.2);
  }

  .form-card textarea {
    resize: vertical;
    min-height: 80px;
  }

  .form-card button {
    width: 100%;
    padding: 10px;
    background: linear-gradient(135deg, #1cc88a, #36b9cc);
    color: white;
    border: none;
    border-radius: 6px;
    font-size: 15px;
    cursor: pointer;
    transition: 0.3s;
    font-weight: bold;
  }

  .form-card button:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 15px rgba(28, 200, 138, 0.3);
  }

  .error {
    color: #e74a3b;
    text-align: center;
    margin-bottom: 15px;
    padding: 10px;
    background: #fdeaea;
    border-radius: 6px;
  }

  .balances {
    background: #e7f3ff;
    padding: 15px;
    border-radius: 8px;
    margin-bottom: 20px;
    border-left: 4px solid #4e73df;
  }

  .balances strong {
    color: #333;
    display: block;
    margin-bottom: 8px;
  }

  .balances div {
    color: #555;
    font-size: 14px;
    margin-bottom: 4px;
  }
</style>

<div class="form-wrapper">
  <div class="form-card">
    <h1>Request Leave</h1>

      <% if (error) { %>
        <div class="error"><%= error %></div>
      <% } %>

      <% if (balances) { %>
        <div class="balances">
          <strong>Your Leave Balances</strong>
          <div>Vacation: <strong><%= balances.vacation || 0 %></strong> days</div>
          <div>Sick: <strong><%= balances.sick || 0 %></strong> days</div>
        </div>
      <% } %>

      <form method="post" action="/leave/new">
        <select name="type" required>
          <option value="" disabled selected>Select Leave Type</option>
          <option value="vacation">Vacation</option>
          <option value="sick">Sick Leave</option>
          <option value="casual">Casual Leave</option>
        </select>

        <input name="start_date" type="date" required />
        <input name="end_date" type="date" required />

        <textarea name="reason" placeholder="Enter reason for leave..." required></textarea>

        <button type="submit">Submit Request</button>
      </form>
    </div>
  </div>

<%- include('../partials/footer') %>
